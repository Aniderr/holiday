<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@mipmap/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="25dp"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"
            android:background="@drawable/press"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/music_title"
            android:textColor="@color/color_99b4a1"
            android:textSize="@dimen/big_font"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"/>

    </RelativeLayout>

    <!--<ListView
        android:id="@+id/music_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:divider="@null"></ListView>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/music4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/music4"
                android:background="@drawable/press"/>

            <ImageView
                android:id="@+id/music5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/music5"
                android:layout_marginLeft="5dp"
                android:background="@drawable/press"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/music1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/music1"
                android:background="@drawable/press"/>

            <ImageView
                android:id="@+id/music2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/music2"
                android:layout_marginLeft="5dp"
                android:background="@drawable/press"/>

            <ImageView
                android:id="@+id/music3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/music3"
                android:layout_marginLeft="5dp"
                android:background="@drawable/press"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/music6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/music6"
                android:background="@drawable/press"/>

            <ImageView
                android:id="@+id/music7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/music7"
                android:layout_marginLeft="5dp"
                android:background="@drawable/press"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
